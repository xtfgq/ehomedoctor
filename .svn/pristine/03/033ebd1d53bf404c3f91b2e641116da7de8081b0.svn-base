<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_text_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:id="@+id/rlaccount"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="27dip"
        android:layout_marginRight="27dip"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/ivuser"
            android:layout_width="22dip"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="4dp"
            android:background="@mipmap/icon_user" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@+id/ivuser"
            android:background="@null"
            android:digits="0123456789"
            android:hint="医生账号"
            android:maxLength="11"
            android:singleLine="true"
            android:text=""
            android:textColor="#636165"
            android:textColorHint="#636165"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/rlpass"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="27dip"
        android:layout_marginRight="27dip"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/ivpass"
            android:layout_width="22dip"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="4dp"
            android:background="@mipmap/icon_key" />

        <EditText
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@+id/ivpass"
            android:background="@null"
            android:hint="密     码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:textColor="#636165"
            android:textColorHint="#636165"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvselect"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_centerVertical="true"
            android:text="忘记密码"
            android:onClick="goForget"
            android:textColor="#00c07d"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray_line" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/register_btn_bg"
        android:text="登  录"
        android:textColor="@color/base_color_text_white" />


</LinearLayout>

